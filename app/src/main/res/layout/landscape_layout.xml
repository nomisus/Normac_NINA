<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/landscapeMainLayout">

    <TextView
        android:id="@+id/lblListItem"
        android:background="#2d81c3"
        android:text="@string/landscape"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lndscpInfoLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lndscpInfoGrid">

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:id="@+id/lndscpInfoGridSpace" />

            <TextView
                android:id="@+id/lblSiteArea"
                android:text="@string/siteArea"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:id="@+id/editSiteArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:background="@drawable/edit_text_holo_light"
                android:ems="10"
                android:layout_row="0"
                android:layout_column="2"
                android:inputType="text" />

            <TextView
                android:id="@+id/lblSoftPerc"
                android:text="@string/soft_percent"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:layout_row="1"
                android:layout_column="1" />

            <EditText
                android:id="@+id/editSoftPerc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:background="@drawable/edit_text_holo_light"
                android:ems="10"
                android:layout_row="1"
                android:layout_column="2"
                android:inputType="number"
                android:hint="@string/lndscp_hint"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/lblHardPerc"
                android:text="@string/hard_percent"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:layout_row="2"
                android:layout_column="1" />

            <EditText
                android:id="@+id/editHardPerc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:background="@drawable/edit_text_holo_light"
                android:ems="10"
                android:layout_row="2"
                android:layout_column="2"
                android:hint="@string/lndscp_hint1"
                android:textAlignment="center"
                android:inputType="number" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_rowSpan="2"
                android:id="@+id/lndscpInfoGridSpace1" />

            <TextView
                android:id="@+id/lblSoftQua"
                android:text="@string/soft_quality"
                android:layout_width="wrap_content"
